<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="garbagemayor.bigenews.ViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">


            <TextView
                android:id="@+id/news_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:layout_margin="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp"/>

            <TextView
                android:id="@+id/news_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:layout_marginVertical="10dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/news_view_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:lineSpacingExtra="5dp"
                android:layout_margin="10dp"
                android:layout_marginVertical="10dp"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp"/>

            <TextView
                android:id="@+id/news_view_Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:layout_marginVertical="10dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/news_view_Journal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:layout_marginVertical="10dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center">

                <at.markushi.ui.CircleButton
                    android:id="@+id/button_download"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:layout_weight="1"
                    android:src="@mipmap/download"
                    app:cb_color="#99CC00"
                    app:cb_pressedRingWidth="8dip" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/button_share"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:layout_weight="1"
                    android:src="@mipmap/share"
                    app:cb_color="#99CC00"
                    app:cb_pressedRingWidth="8dip" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/button_favor"
                    android:layout_width="64dip"
                    android:layout_height="64dip"
                    android:layout_weight="1"
                    android:src="@mipmap/favor"
                    app:cb_color="#99CC00"
                    app:cb_pressedRingWidth="8dip" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
